{
    "compilerOptions": {
  
      /* Basic Options */                       
      "target": "es5",                       
      "module": "es2015",                  
      "sourceMap": true,                      
      "strict": true,                       
      "alwaysStrict": true,   
      "strictNullChecks": true     ,
      "forceConsistentCasingInFileNames": true,    
      "outDir": "dist"    
    },
    "include": ["**/*.ts", "**.*.tsx"],
    "exclude": ["node_modules"]
  }