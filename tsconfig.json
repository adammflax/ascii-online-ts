{
  "compilerOptions": {
    /* Basic Options */

    "target": "es6",
    "module": "es6",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["**/*.ts", "**.*.tsx"],
  "exclude": ["node_modules"]
}
